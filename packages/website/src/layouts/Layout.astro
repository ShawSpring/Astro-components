---
import Header from '../components/header.astro';
import {ScrollObserver} from 'astro-scroll-observer';
import BacktoTop from '@/components/backtoTop.astro';

import ThemeScript from '@/components/themeScript.astro';

import './index.css';
import 'rehype-callout/css';

import Sidebar from '@/components/sidebar.astro';
import logo from '@/assets/ss.png';

interface Props {
	title: string;
	description?: string;
	keywords?: string;
	header:string
}
const {title,keywords,
description ="docs for shaw spring's package"} = Astro.props;

const bgAndTextClass = 'dark:bg-gray-800 dark:text-slate-100 bg-slate-50 text-slate-900';
---  

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		{keywords && <meta name="keywords" content={keywords} />}
		<link rel="icon" type="image/png" href={logo.src} />
		<meta name="generator" content={Astro.generator} />
		<ThemeScript />
		<ScrollObserver /> 
		<title>{title}</title>
	</head>
	<body class={bgAndTextClass + " relative flex justify-end [--sidebar-w:16rem] [--header-h:4rem]"}> 
		<div class="relative w-full md:w-[calc(100%-var(--sidebar-w))]">      
			<Header header={Astro.props.header} class='h-[var(--header-h)]'/>  
			<main class="container mx-auto lg:w-[800px] px-4 pt-8 mb-16 mt-[var(--header-h)]">
				<article
					class="mx-auto prose prose-green dark:prose-indigo prose-blockquote:prose-sm lg:prose-lg \
				 dark:prose-invert prose-p:text-justify prose-img:rounded-xl">
					<slot />
					<!-- markdown slot -->
				</article>
			</main>
		</div>
		<Sidebar id="sidebar" class='overflow-hidden transition-transform duration-300 w-[var(--sidebar-w)] \
		 -translate-x-[var(--sidebar-w)] md:translate-x-0'/>
		<BacktoTop />
	</body>
</html>


<style>
	#sidebar.expanded{
		transform: translateX(0px);
	}
</style>